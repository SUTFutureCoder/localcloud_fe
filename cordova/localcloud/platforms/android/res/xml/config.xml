<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<widget id="io.cordova.localcloud" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
  <feature name="Whitelist">
    <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin"/>
    <param name="onload" value="true"/>
  </feature>
  <feature name="HotCodePush">
    <param name="android-package" value="com.nordnetab.chcp.main.HotCodePushPlugin"/>
    <param name="onload" value="true"/>
  </feature>
  <feature name="HotCodePushLocalDevMode">
    <param name="android-package" value="com.nordnetab.chcp.localdev.HotCodePushLocalDevPlugin"/>
    <param name="onload" value="true"/>
  </feature>
  <feature name="Geolocation">
    <param name="android-package" value="org.apache.cordova.geolocation.Geolocation"/>
  </feature>
  <feature name="AdvancedGeolocation">
    <param name="android-package" value="com.esri.cordova.geolocation.AdvancedGeolocation"/>
  </feature>
  <feature name="Device">
    <param name="android-package" value="org.apache.cordova.device.Device"/>
  </feature>
  <feature name="BackgroundMode">
    <param name="android-package" value="de.appplant.cordova.plugin.background.BackgroundMode"/>
  </feature>
  <feature name="Camera">
    <param name="android-package" value="org.apache.cordova.camera.CameraLauncher"/>
  </feature>
  <feature name="File">
    <param name="android-package" value="org.apache.cordova.file.FileUtils"/>
    <param name="onload" value="true"/>
  </feature>
  <feature name="NetworkStatus">
    <param name="android-package" value="org.apache.cordova.networkinformation.NetworkManager"/>
  </feature>
  <feature name="WifiWizard">
    <param name="android-package" value="com.pylonproducts.wifiwizard.WifiWizard"/>
    <param name="onload" value="true"/>
  </feature>
  <allow-navigation href="cdvfile:*"/>
  <allow-navigation href="*"/>
  <name>本地云</name>
  <description>
		一款创始人花了一千块钱恢复移动硬盘数据为代价诞生的灵感。顺便一提：渣士顿一生黑
    </description>
  <author email="FutureCoder@aliyun.com" href="https://github.com/SUTFutureCoder/">
        *Chen
		bricks
    </author>
  <content src="index.html"/>
  <access origin="*"/>
  <access origin="file:///*"/>
  <allow-intent href="http://*/*"/>
  <allow-intent href="https://*/*"/>
  <allow-intent href="tel:*"/>
  <allow-intent href="sms:*"/>
  <allow-intent href="mailto:*"/>
  <allow-intent href="geo:*"/>
  <allow-intent href="market:*"/>
  <preference name="loglevel" value="DEBUG"/>
  <preference name="KeepRunning" value="true"/>
  <preference name="AndroidLaunchMode" value="standard"/>
  <preference name="loadUrlTimeoutValue" value="60000"/>
  <preference name="AndroidPersistentFileLocation" value="Internal"/>
  <chcp>
    <local-development enabled="true"/>
    <config-file url="https://0333e2b3.ngrok.io/chcp.json"/>
  </chcp>
</widget>